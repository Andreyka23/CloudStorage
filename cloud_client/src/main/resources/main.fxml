<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="rootNode" alignment="CENTER" prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: linear-gradient(#fff 0%, #eee 10%, #ddd 90%, #bbb 100%);" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.geekbrains.cloud_client.controllers.MainController">
    <HBox prefWidth="600.0">
        <Label prefHeight="25.0" prefWidth="300.0" text="Файлы на клиенте" />
        <Label prefHeight="25.0" prefWidth="300.0" text="Файлы на сервере" />
    </HBox>
    <HBox prefHeight="375.0" prefWidth="600.0">
        <ListView fx:id="clientFilesList" prefHeight="375.0" prefWidth="300.0" VBox.vgrow="ALWAYS" />
        <ListView fx:id="serverFilesList" prefHeight="375.0" prefWidth="300.0" VBox.vgrow="ALWAYS" />
    </HBox>
    <HBox prefWidth="600.0">
        <Button onAction="#pressOnUploadBtn" prefHeight="25.0" prefWidth="300.0" text="Закачать" VBox.vgrow="ALWAYS" />
        <Button onAction="#pressOnDownloadBtn" prefHeight="25.0" prefWidth="300.0" text="Скачать" VBox.vgrow="ALWAYS" />
    </HBox>
</VBox>
